<p style="color: green"><%= notice %></p>

<h1>Tweets</h1>
<br>

<%=form_with url: tweets_path, method: :get do |form|   %>

<%= form.text_field :query_text, placeholder: t('query_text'), value: params[:query_text] %>

<%end%>



<br><br>
<%= paginate @tweets%>
<br> <br>

<div id="tweets">
  <% @tweets.each do |tweet| %>



    <%= render tweet %>
    <p>
      <%= link_to "Show this tweet", tweet %>
    </p>
  <% end %>
</div>

<%= link_to "New tweet", new_tweet_path %>
